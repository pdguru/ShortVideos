<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".views.MainActivity"
        android:orientation="vertical"
        android:weightSum="3">

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1" android:background="@color/lightRed"
            android:id="@+id/question1CL">
        <TextView
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:text="Question 1"
                android:id="@+id/question1"
                android:gravity="center"
                android:padding="4dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Answer now" app:layout_constraintTop_toBottomOf="@+id/question1"
                  android:layout_marginTop="10dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"
                  android:id="@+id/answerNow1" android:visibility="visible"
                  android:textColor="@android:color/white"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Replay answer" app:layout_constraintTop_toBottomOf="@+id/question1"
                  android:layout_marginTop="10dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"
                  android:id="@+id/replayNow1" android:visibility="gone"
                  android:textColor="@android:color/white"/>
    </android.support.constraint.ConstraintLayout>

    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@android:color/white"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1" android:background="@color/midRed"
            android:id="@+id/question2CL">
        <TextView
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:text="Question 2"
                android:id="@+id/question2"
                android:gravity="center"
                android:padding="4dp" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Answer now" app:layout_constraintTop_toBottomOf="@+id/question2"
                  android:layout_marginTop="10dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"
                  android:id="@+id/answerNow2" android:visibility="visible"
                  android:textColor="@android:color/white"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Replay answer" app:layout_constraintTop_toBottomOf="@+id/question2"
                  android:layout_marginTop="10dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"
                  android:id="@+id/replayNow2" android:visibility="gone"
                  android:textColor="@android:color/white"/>

    </android.support.constraint.ConstraintLayout>

    <View android:layout_width="match_parent" android:layout_height="2dp"
          android:background="@android:color/white"/>

    <android.support.constraint.ConstraintLayout
            android:layout_width="match_parent" android:layout_height="wrap_content"
            android:layout_weight="1" android:background="@color/darkRed"
            android:id="@+id/question3CL">
        <TextView
                android:layout_width="368dp"
                android:layout_height="wrap_content"
                android:text="Question 3"
                android:id="@+id/question3"
                android:gravity="center"
                android:padding="4dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Title"
                android:textColor="@android:color/white"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Answer now" app:layout_constraintTop_toBottomOf="@+id/question3"
                  android:layout_marginTop="10dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"
                  android:id="@+id/answerNow3" android:visibility="visible"
                  android:textColor="@android:color/white"/>

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="Replay answer" app:layout_constraintTop_toBottomOf="@+id/question3"
                  android:layout_marginTop="10dp"
                  app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
                  app:layout_constraintEnd_toEndOf="parent"
                  android:textAppearance="@style/Base.TextAppearance.AppCompat.Widget.Button"
                  android:id="@+id/replayNow3" android:visibility="gone"
                  android:textColor="@android:color/white"/>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>